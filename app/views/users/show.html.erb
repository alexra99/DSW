<h1>Users#user</h1>
Username: <%= @user.username %>
<br>
E-mail: <%= @user.email %>
<br>
Rol: <%= @user.rol %>
<br>

<%= button_to "Back", posts_path, class: "cancel_btn", :method => :get%>
<% if @user.id == current_user.id || current_user.rol == "admin" %>
  <%= button_to "Edit", edit_user_path(@user.id), class: "btn", :method => :get %>
  <%=
      button_to "Delete",
      @user,
      :method => :delete,
      :data => { :confirm => "Are you sure to delete the note? You won't be able to get it back." }
  %>
<%end%>