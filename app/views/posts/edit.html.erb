<% content_for :title, "Edit note" %>

  <div class="edit">

    <div class="edit_info">
      <%#= image_tag  "ruby-red.png", class: "edit_img", alt: "Your avatar" %>
      <span>Edit Note</span>
    </div>

    <%= form_for @post, url: { action: 'update' } do |f| %>
      <% if @post.errors.any? %>
        <%= render 'partials/emssg', mssg: @post.errors.full_messages[0] %>
      <% end %>

      <div class="eu_div">
        <span class='edit_span'>Title</span>
        <%= f.text_field :title, class: "e_username", placeholder: 'Title..', autofocus: true, spellcheck:false, autocomplete: false %>
      </div>
        <%if @post.has_photo?%>
          <%= image_tag (@post.photo_path)%>
        <%end%>
      <%= f.label :title, "Current image: #{@post.photo_name}"%>
        
      <%= f.file_field :photo, accept: 'image/png,image/jpeg'%>
       
      <div class="eb_div">
        <span class='edit_span'>Content</span>
        <%= f.text_area :content, placeholder: "Content..", autofocus: true, class: "e_bio", spellcheck:false, autocomplete: false %>
      </div>

      <% collect_list = [] %>
      
      <% @collects.each do |el|%>
        <% if el.user_id == current_user.id || current_user.rol == "admin"%>
          <% collect_list.push(el) %>
        <%end%>
      <% end %>
      
      <%= f.collection_select :collect_id, collect_list, :id, :name, include_blank: true, :selected => @post.collect_id, class:"btn" %>

      <div class="note_actions">
        <%= link_to "Cancel Note", posts_path, class: "cancel_btn" %>
        <%= f.submit "Update Note", class: "btn" %>
      </div>
    <% end %>

  </div>
