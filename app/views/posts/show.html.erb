<% content_for :title, "View Note | AESME" %>

<div class="notes_wrapper">
  <div class="home">

    <div class="note" id=>
      <div class="note_content">
        <span class="note_title"><%= @post.title %></span>
        <span class="note_content"><%= @post.content %></span>
      </div>
      <div class="note_header common_header">
        <%#= image_tag "ruby-red.png" %>
        <div class="note_h_left">
          <span class="note_username">You..</span>
          <span class='note_time'><%= @post.created_at %></span>
        </div>
      </div>
      <div class="note_actions">
      <input type="color" list="list_colors" id="color">
          <datalist id="list_colors">
            <option value="#ffffcc">
            <option value="#ff0000">
            <option value="#FF00FF">
          </datalist>

          <script type="text/javascript">
            document.getElementById("color").onchange = function(){
              backRGB = this.value

              document.getElementsByClassName("note")[0].style.background = backRGB
              
            }
            </script>
        <%= link_to "Back", posts_path, class: 'btn' %>
        <%= link_to "Edit", edit_post_path(@post.id), class: "btn" %> 
        <%=
          link_to "Delete",
          post_path(@post.id),
          class: "btn_delete",
          :data => { :confirm => "Are you sure to delete the note? You won't be able to get it back." },
          :method => :delete
        %>
      </div>
    </div>

  </div>
</div>