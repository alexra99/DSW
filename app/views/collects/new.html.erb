<% content_for :title, "New Note" %>

  <div class="edit">

    <div class="edit_info">
      <%#= image_tag  "ruby-red.png", class: "edit_img", alt: "Your avatar" %>
      <span>Create Collection</span>
    </div>

    <%= form_for @collect, url: { action: 'create' } do |f| %>
      <% if @collect.errors.any? %>
        <%= render 'partials/emssg', mssg: @collect.errors.full_messages[0] %>
      <% end %>

      <div class="eu_div">
        <span class='edit_span'>Title</span>
        <%= f.text_field :name, class: "e_username", placeholder: 'Title...', autofocus: true, spellcheck:false, autocomplete: false %>
      </div>

      <div class="note_actions">
        <%= link_to "Cancel Collection", collects_path, class: "cancel_btn" %>
        
        <%= f.submit "Create Collection", class: "btn" %>
      </div>
    <% end %>

  </div>